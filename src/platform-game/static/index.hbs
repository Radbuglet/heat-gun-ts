<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Heat Gun</title>
    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>
<body>
    <script src="static/game/bundle.js"></script>
    {{#if discord_invite_url}}
        <a href="{{discord_invite_url}}"><button id="discord-link"> Discord Server </button></a>
    {{/if}}

    {{#if recaptcha_sitekey}}
        <div id="captcha-screen">
            <div class="g-recaptcha" data-sitekey="{{recaptcha_sitekey}}" data-callback="__recaptcha_cb"></div>
        </div>
        <script>
            function __recaptcha_cb(token) {
                document.getElementById("captcha-screen").style.display = "none";
                window.heatgun_global_hooks.captcha_validated(token);
            }
        </script>
    {{^}}
        <script>
            window.heatgun_global_hooks.captcha_validated(null);
        </script>
    {{/if}}

    <style>
        @import url('https://fonts.googleapis.com/css?family=Bangers');
        @import url('https://fonts.googleapis.com/css?family=Press+Start+2P');
        @import url('https://fonts.googleapis.com/css?family=Roboto');
    
        body {
          user-select: none;
          margin: 0;
          overflow: hidden;
          font-family: 'Roboto', sans-serif;
        }

        #game {
            background: #fff; /*radial-gradient(rgb(255, 255, 255), rgb(222, 228, 232));*/
        }

        #captcha-screen {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            background: rgba(30, 33, 36, 0.5);
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            color: #fff;
            z-index: 1;
        }

        #discord-link {
            position: fixed;
            top: 5px;
            left: 5px;
            background-color: #7289da;
            color: #fff;
            border: 0;
            font-size: 90%;
            width: 8%;
            min-width: 150px;
            padding: 10px;
            border-radius: 3px;
            outline: none;
            box-shadow: 0 2px 10px 0 rgba(0,0,0,.2);
            font-family: 'Roboto', sans-serif;

            transition-property: background-color, color, opacity;
            transition-duration: 0.17s, 0.17s;
            transition-timing-function: ease, ease;
            transition-delay: 0s, 0s;
        }

        #discord-link:hover {
            background-color: #677bc4;
            cursor: pointer;
        }

        #discord-link:active {
            background-color: #5b6eae;
        }

        #discord-link {
            display: none;
        }

        body[is_in_menu="yes"] #discord-link {
            display: block;
        }
      </style>
</body>
</html>